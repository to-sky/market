{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
	<div class="fos_user_user_show">
		<div class="col-sm-12">
			<h1 class="page-header">User info</h1>
			<table class="table table-condensed">
				<thead>
					<tr>
						<th>{{ 'profile.show.username'|trans }}</th>
						<th>{{ 'profile.show.email'|trans }}</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{ user.username }}</td>
						<td>{{ user.email }}</td>
						<td>
							<div class="btn-group">
							    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default">Edit profile</a>
							    <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary">Change password</a>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
