{% extends 'base.html.twig' %}
{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}

{% block body %}
        <h1 class="page-header">Edit product</h1>

        {{ form_start(edit_form) }}
        <div class="row">
            <div class="col-sm-3">
                {{ form_row(edit_form.imageFile) }}
            </div>
            <div class="col-sm-9">
                {{ form_row(edit_form.title) }}
                {{ form_row(edit_form.body) }}
                {{ form_row(edit_form.price) }}
    
                <div class="btn-group pull-right">
                    <input type="submit" value="Edit" class="btn btn-primary"/>
                    <a href="{{ path('product_index') }}" class="btn btn-default">Back to the list</a>
                    <button type="button" class="btn btn-danger pull-right" data-toggle="modal" data-target="#deletePdoduct">
                        Delete
                    </button>
                </div>
            </div>
        </div>
        {{ form_end(edit_form) }}
        
        <div class="modal fade" id="deletePdoduct" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title"><i class="fa fa-trash-o text-danger"></i> Delete this product</h4>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure to delete <strong class="text-info">{{ edit_form.vars.value.title }}</strong>?</p>
                    </div>
                    <div class="modal-footer">

                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <div class="col-sm-2 pull-right">
                                {{ form_start(delete_form) }}
                                    <input type="submit" value="Delete" class="btn btn-danger">
                                {{ form_end(delete_form) }}
                            </div>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
{% endblock %}
    
